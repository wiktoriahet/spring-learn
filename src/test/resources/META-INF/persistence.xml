<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="pl.hetman.wiktoria.java.app.socialactivitytracker.jpa.test">
<!--        <provider>org.hibernate.ejb.HibernatePersistence</provider>-->
        <class>pl.hetman.wiktoria.java.app.socialactivitytracker.ActivityModel</class>
        <class>pl.hetman.wiktoria.java.app.socialactivitytracker.ActivityTypeModel</class>
        <class>pl.hetman.wiktoria.java.app.socialactivitytracker.UserModel</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/h2database/social-activity-tracker-test" />
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>
</persistence>
